<div class="card">
  <div class="card-body">
    <h1 class="card-title text-center"><%= @recipe.name %></h1>
    <div class="switch">
      <div class="form-check form-switch">
        <% if @recipe.public %>
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" checked disabled>
          <% else %>
            <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault" disabled>
        <% end %>
        <label class="" for="flexSwitchCheckDefault">Public</label>
      </div>
    </div> 
    <div class="recipe_info">
      <p class="card-text">Preparation time: <%= @recipe.preparation_time %> h</p>
      <p class="card-text">Cooking time: <%= @recipe.cooking_time %> h</p>
      <p class="card-text"><%= @recipe.description %></p>
      <%= link_to 'Add ingredient', new_food_path, class:"btn btn-primary" %>
    </div>
  </div>
</div>
   <br>
<div class="recipe_table">
  <table class="table table-striped table-bordered">
    <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Value</th>
      <th>Actions</th>
    </tr>
      <% @recipe_foods.each do |recipe_food| %>
        <tr>
          <td><%= recipe_food.food.name %></td>
          <td><%= recipe_food.quantity %> <%= recipe_food.food.measurement_unit %></td>
          <td>$<%= recipe_food.food.price %></td>
          <td><%= button_to 'Remove', '#' , class:"btn btn-primary form-control"%></td>
        </tr>
      <% end %>
  </table>
</div>

  
