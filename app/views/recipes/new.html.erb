<h1 class='heading'>Add a new recipe</h1>

<%= form_with model: @recipe, method: :post, url: recipes_path, scope: :post, local: true, class:"input-form" do |f| %>

<div class="form-div">
	<div class="mb-3 col-sm-8">
	<%= f.label :name, class:"form-label" %><br>
	<%= f.text_field :name, class:"form-control"%>
	</div>
	
	<div class="mb-3 col-sm-8">
	<%= f.label :cooking_time, class:"form-label" %><br>
	<div class="input-group mb-3">
		<%= f.number_field :cooking_time, in: 0..20.0, step: 0.5, class:"form-control"%>
		<span class="input-group-text">hour</span>
	</div>
	</div>
	
	<div class="mb-3 col-sm-8">
	<%= f.label :preparation_time, class:"form-label" %><br>
	<div class="input-group mb-3">
		<%= f.number_field :preparation_time, in: 0..20.0, step: 0.5, class:"form-control"%>
		<span class="input-group-text">hour</span>
	</div>
	</div>
	
	<div class="mb-3 col-sm-8">
	<%= f.label :description, class:"form-label" %><br>
	<%= f.text_area :description, class:"form-control"%>
	</div>
	</div>
	
	<div class="mb-3 col-sm-8">
		<%= f.submit "Create a new recipe", class:"btn btn-primary form-control"%>
	</div>
	<div class="form-check form-switch">
    <%= f.check_box :public, class:"form-check-input", id:"flexSwitchCheckDefault" %>
    <label class="form-check-label" for="flexSwitchCheckDefault">Public</label>
  </div>
	<% end %>
</div>
