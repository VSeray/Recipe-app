<h1 class="heading">recipe food</h1>

<div class="listDiv">
  <table class="table table-striped table-bordered">
    <thead>
        <tr>
        <th class="mb-3 col-sm-3">Food</th>
        <th class="mb-3 col-sm-4">Measurement Unit</th>
        <th class="mb-3 col-sm-3">Unit Price</th>
        <th class="mb-3 col-sm-5">Quantity</th>
        <th class="mb-3 col-sm-6">Action</th>
        </tr>
    </thead>

    <tbody>
    <% @foods.each do |food|%>
    <tr>
      <td><%= food.name%></th>
      <td><%= food.measurement_unit%></td>
      <td>$<%= food.price%></td>
			
			<%= form_with model: @recipe_food, method: :post, url: recipe_recipe_foods_path(params[:recipe_id]), scope: :recipe_food, local: true, class:"input-form" do |f| %>

        <%= f.hidden_field :food_id, :value => food.id %>

	      <td>
	        <%= f.text_field :quantity, class:"form-control"%>
	      </td>
	
	      <td>
		      <%= f.submit "Add to recipe", class:"btn btn-primary form-control"%>
	      </td>
	    <% end %>
      
    </tr>
    <% end %>
    </tbody>
  </table>
</div>
